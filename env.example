# OAuth2 remote (required)
X_OAUTH2_CLIENT_ID=
X_OAUTH2_CLIENT_SECRET=
# Must be HTTPS, for example: https://xmcp.example.com
X_MCP_PUBLIC_URL=

# OAuth2 remote (recommended)
# Must include offline.access (startup validation enforces this)
X_OAUTH2_SCOPES=tweet.read tweet.write users.read offline.access
X_TOKEN_STORE_PATH=.tokens.json
X_CORS_ORIGINS=
X_B3_FLAGS=1

# App-only Bearer Token (optional, used for read-only GET requests to avoid 402 bug)
X_BEARER_TOKEN=

# X API settings
X_API_BASE_URL=https://api.x.com
X_API_TIMEOUT=30
X_API_MAX_RETRIES=2
X_API_DEBUG=1

# MCP server settings
MCP_HOST=127.0.0.1
# Use MCP_HOST=0.0.0.0 in Docker so the container port is reachable from the host.
MCP_PORT=8000

# Tool filtering (optional, comma-separated)
X_API_TOOL_ALLOWLIST=
X_API_TOOL_DENYLIST=
X_API_TOOL_TAGS=

# Optional Grok test client
XAI_API_KEY=
XAI_MODEL=grok-4-1-fast
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
